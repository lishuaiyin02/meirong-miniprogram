/* pages/userManagement/userManagement.wxss */
page{
  width: 100%;
  height: 100%;
  background-color: #eee;
}
.button1 button{
  margin-top: 30rpx;
  margin-right: 30rpx;
  width: 150rpx;
  height: 60rpx;
  text-align:center;
  font-size: 30rpx;
  color: #fff;
  background-color: rgb(104, 192, 4);
}
.artical-container{
  width: 99%;
  height: 200rpx;
  display: flex;
  flex-direction: row;
  margin-top: 40rpx;
  background: #fff;
}
.articleinfo{
  width: 79%;
  height: 200rpx;
  padding-left: 20rpx;
  
}
.article-title{
  display: -webkit-box;
  font-size: 30rpx;
  margin-top: 20rpx;
  -webkit-line-clamp: 2; 
  /*超出文本隐藏*/
  overflow: hidden;
  /*并显示省略号*/
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.article-describe{
  display: -webkit-box;
  width: 90%;
  font-size: 30rpx;
  margin-top: 40rpx;
  color: rgb(199, 198, 198);
  -webkit-line-clamp: 2;
  /* 超出文本隐藏 */
  overflow:hidden;
  /* 并显示省略号 */
  text-overflow: ellipsis;
  -webkit-box-orient: vertical;
}
.article-operation{
  width: 20%;
  height: 200rpx;
  margin-right: 10rpx;
}
.edit{
  height:40% important;
  padding-right: 5rpx;
  /* margin-left: 15rpx; */
  font-size: 30rpx;
  margin-top: 10rpx;
  color: #1457d4;
