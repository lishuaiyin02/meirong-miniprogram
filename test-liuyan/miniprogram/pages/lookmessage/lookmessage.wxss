/* pages/lookmessage/lookmessage.wxss */
.title-style{
  font-size: 38rpx;
  color: #000;
  font-family: '微软雅黑';
  padding-left: 20rpx;
  padding-top: 35rpx;
  padding-bottom: 40rpx;
}
/* 空格 */
.space{
  width: 100%;
  height: 20rpx;
  background-color:  rgba(238, 238, 238, 0.281);
}
/*回到主页面*/
.post {
  float: right;
  position: fixed;
  bottom: 30px;
  left: 30px;  
  border: 0 solid #ffffff;
  border-radius: 500px;
  box-shadow: 4px 1px 1px #cccccc;
}
/* “用户留言”文字 */
.user-message{
  width: 100%;
  height: 50rpx;
  font-size: 34rpx;
  color: #ccc;
  padding: 40rpx 0 20rpx 20rpx;
}
.backgroundcolor{
  background: rgba(238, 238, 238, 0.281);
}
/* 留言内容container */
.message-content{
  display: flex;
  flex-direction: row;
  width: 97%;
  padding-top: 40rpx;
}
/* 头像container */
.head-container{
  padding-left: 20rpx;
}
/* 用户头像style */
.user-hear-style{
  width: 80rpx;
  height: 80rpx;
}
/* 用户名+留言内容 container */
.username-message{
  width: 450rpx;
  margin-left: 20rpx;
}
/* 用户名style */
.username{
  font-size: 32rpx;
  color: #ccc;
  font-family: '微软雅黑';
  padding-left: 5rpx;
  padding-top: 2rpx;
}

/* 用户留言内容 */
.message{
  font-size: 32rpx;
  color: #000;
  font-family: '微软雅黑';
  padding-left: 5rpx;
  padding-top: 6rpx;
}
/* 作者回复container */
.reply-container{
  display: flex;
  flex-direction: row;
  margin-left: 20rpx;
  margin-top: 20rpx;
}
/* 作者回复图标 */
.author-reply-line{
  width: 6rpx;
  height: 26rpx;
  background-color: rgb(76, 250, 7);
  padding-top: 9rpx;
}
/* “作者”字体style */
.author-text{
  font-size: 32rpx;
  color: #ccc;
  font-family: '微软雅黑';
  padding-left: 10rpx;
}
/* 作者回复内容信息 */
.author-reply-message{
  width: 510rpx;
  font-size: 34rpx;
  color: #000;
  font-family: '微软雅黑';
  padding-left: 20rpx;
  padding-top: 6rpx;
}
/* 精选置顶和回复 */
.operation-container{
  font-size: 32rpx;
  color: rgb(0, 60, 255);
  padding-top: 15rpx;
}
/* 回复按钮 */
.btn-reply{
  /* width: 100rpx; */
  /* height: 40rpx; */
  display:inline-block;
  font-size: 32rpx;
  padding: 5rpx;
  background: rgb(54, 173, 6);
  color: #fff;
}
/* 精选 */
.jinxuanblue{
  padding-top: 10rpx;
}

.jinxuanred{
  padding-top: 10rpx;
  color: red;
}
/* 删除 */
.delete{
  padding-top: 10rpx;
}
